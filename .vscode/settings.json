{
  // Live Preview & Browser Settings
  "livePreview.defaultPreviewPath": "/src/app/page.tsx",
  "livePreview.portNumber": 3000,
  "livePreview.showStatusBarItem": true,
  "livePreview.openPreviewTarget": "Beside",
  "livePreview.customExternalBrowser": "Default",
  
  // Editor Layout for Split-Pane Experience
  "workbench.editor.enablePreview": false,
  "workbench.editor.revealIfOpen": true,
  "workbench.panel.defaultLocation": "right",
  "workbench.panel.opensMaximized": "never",
  "workbench.sideBar.location": "left",
  
  // Terminal Configuration
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.tabs.location": "left",
  "terminal.integrated.splitCwd": "workspaceRoot",
  
  // Code Guides & Rulers for Pixel-Perfect Layout
  "guides.enabled": true,
  "guides.indent.enabled": true,
  "guides.rulers": [80, 120],
  "guides.bracket.enabled": true,
  "guides.overrideDefault": true,
  
  // Screenshot & CodeSnap Configuration
  "codesnap.backgroundColor": "transparent",
  "codesnap.boxShadow": "rgba(0, 0, 0, 0.55) 0px 20px 68px",
  "codesnap.containerPadding": "3em",
  "codesnap.roundedCorners": true,
  "codesnap.showWindowControls": true,
  "codesnap.showWindowTitle": true,
  "codesnap.showLineNumbers": true,
  
  // Git & Version Control
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "gitlens.views.repositories.location": "scm",
  "gitlens.views.fileHistory.location": "explorer",
  "gitlens.views.lineHistory.location": "explorer",
  
  // File Explorer
  "explorer.compactFolders": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml",
    "tailwind.config.*": "tailwind.config*, postcss.config*"
  },
  
  // TypeScript & React Settings
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.autoImports": true,
  "typescript.preferences.importModuleSpecifier": "relative",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  
  // JSON & Data Tools
  "json.validate.enable": true,
  "json.format.enable": true,
  
  // AI & Copilot
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": true
  },
  
  // Auto-save for Hot Reload
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  
  // Preview & Development
  "html.format.indentInnerHtml": true,
  "css.validate": true,
  "scss.validate": true,
  
  // Tailwind CSS Configuration
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript"
  },
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "ngClass"
  ],
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  
  // Workspace Layout
  "workbench.startupEditor": "none",
  "workbench.editor.splitInGroupLayout": "horizontal",
  "typescript.tsdk": "node_modules/typescript/lib"
}
